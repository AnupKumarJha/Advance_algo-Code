#include<bits/stdc++.h>
using namespace std;

void reverse(int arr[],int low,int high){
    
    for(int i=low,j=high;i<j;i++,j--){
        
      int  temp=arr[i];
        arr[i]=arr[j];
        arr[j]=temp;
    }
    
}

 void print(int arr[],int size){
    
    for(int i=0;i<size;i++){
        
        cout<<arr[i]<<" ";
    }

}
void rotateLeft(int arr[],int n,int k){
   // k=n-k;
   
    reverse(arr,0,k);
    reverse(arr,k,n);
    reverse(arr,0,n);
    
}
void rotateRight(int arr[],int  n,int k){
     reverse(arr,k,n);
reverse(arr,0,k);
reverse(arr,0,n);
    
    
}


int main(){
    int n;
    cout<<"size of array \n";
    cin>>n;
    
    int arr[n];
    cout<<"enter the  elements of array\n";
    for(int i=0;i<n;i++){
        
        cin>>arr[i];
    }
    
    int k;
    cout<<"enter the value of k to be sifted\n";
    cin>>k;
    
    if(k>n)k=k%n;
    
 char a;
//cout<<"enter to be left or right shift \n";
cout<<"for left type L or l ,for right shift type r,R\n";
cin>>a;

switch(a){
    
    case 'l':rotateLeft(arr,n,k);
    break;
    case 'r':rotateRight(arr,n,k);
    break;
    case 'L':rotateLeft(arr,n,k);
    break;
    case 'R':rotateRight(arr,n,k);
     break;
     default:cout<<"you have entered wrong kind of rotation\n";
}

cout<<"sifted arrya is \n";
print(arr,n);
    return 0;
}
